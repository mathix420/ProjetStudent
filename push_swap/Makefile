################################################################################
#####                              FILES VARS                              #####
################################################################################

NAME = push_swap

INC = includes

SDIR = srcs
_SRC = 

SRC = $(patsubst %,$(SDIR)/%,$(_SRC))

OBJ = $(SRC:.c=.o)

################################################################################
#####                           COMPILER OPTIONS                           #####
################################################################################

CC = cc
OPTS = $(foreach d, $(INC), -I$d)
FLAGS = -Wall -Wextra -Werror $(OPTS)

################################################################################
#####                            MAKEFILE RULES                            #####
################################################################################

.PHONY: all clean fclean re

all: $(NAME)

%.o:		%.c
		@$(CC) $(FLAGS) -o $@ -c $<
		@printf "\33[2K ➡️  %-15s%s\r" "$<" "✅"

$(NAME):	$(OBJ)
		@ar rc $(NAME) $(OBJ)
		@ranlib $(NAME)
		@printf "\33[2K \r\nIt's time to eat ! 🍪\n"

clean:
		@/bin/rm -f $(OBJ)
		@echo "Objects cleaned ♻️"

fclean: clean
		@/bin/rm -f $(NAME)
		@echo "Library deleted 🚧"

re: fclean all
